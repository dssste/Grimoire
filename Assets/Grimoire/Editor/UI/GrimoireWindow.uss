:root,
.tab-view,
.unity-tab-view__content-container,
.unity-tab,
.unity-tab__content-container {
	flex-grow: 1;
}

.new-tab-button {
	background-color: transparent;
	border-width: 0;
	border-radius: 50%;
	margin: 1px;
	padding: 0;
	width: 20px;
	height: 20px;
}

.new-tab-button:hover {
	background-color: gray;
}

.unity-tab__close-button {
	margin: 2px;
	padding: 0;
	width: 14px;
	height: 14px;
}
